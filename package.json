{
  "name": "carbon-custom-elements",
  "version": "0.1.0",
  "scripts": {
    "build": "gulp build",
    "ci-check": "yarn format:diff && yarn lint",
    "clean": "gulp clean",
    "format": "prettier --write \"**/*.{css,js,md,scss}\"",
    "format:diff": "prettier --check \"**/*.{css,js,md,scss}\"",
    "format:staged": "prettier --write",
    "lint": "eslint .",
    "lint:staged": "eslint",
    "test": "gulp test",
    "test:unit": "gulp test:unit",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 9000"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-knobs": "^5.0.0",
    "@storybook/addon-storysource": "^5.0.0",
    "@storybook/polymer": "^5.0.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-knobs": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@webcomponents/custom-elements": "^1.0.0",
    "@webcomponents/shadydom": "^1.0.0",
    "autoprefixer": "^9.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-istanbul": "^4.1.0",
    "bluebird": "^3.5.0",
    "carbon-components": "^10.0.0",
    "chai": "^4.0.0",
    "classnames": "^2.2.0",
    "core-js": "^2.4.0",
    "css-loader": "^2.0.0",
    "custom-event": "^1.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "del": "^2.2.0",
    "es6-promise": "^4.1.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-carbon-base": "^1.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-node": "^0.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-restricted-globals": "^0.2.0",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-if": "^2.0.0",
    "gulp-jsdoc3": "^1.0.0",
    "gulp-postcss": "^7.0.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-util": "^3.0.0",
    "husky": "^1.3.0",
    "karma": "^1.0.0",
    "karma-chrome-launcher": "^2.1.0",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-rollup-plugin": "^0.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sinon-chai": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.0",
    "lint-staged": "^8.1.0",
    "lit-element": "^2.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "minimist": "^1.2.0",
    "mocha": "^2.4.0",
    "morgan": "^1.8.0",
    "node-sass": "^4.11.0",
    "polymer-webpack-loader": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "rollup": "^0.41.0",
    "rollup-plugin-babel": "^2.7.0",
    "rollup-plugin-commonjs": "^8.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-string": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.0",
    "sass-loader": "^7.1.0",
    "sinon": "^2.3.0",
    "sinon-chai": "^2.10.0",
    "style-loader": "^0.23.0",
    "terser-webpack-plugin": "^1.2.0",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.0",
    "webpack": "^4.28.0"
  },
  "peerDependencies": {
    "@webcomponents/custom-elements": "^1.0.0",
    "@webcomponents/shadydom": "^1.0.0",
    "carbon-components": "^10.0.0",
    "classnames": "^2.2.0",
    "lit-element": "^2.1.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        50
      ],
      "body-max-line-length": [
        2,
        "always",
        72
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format:staged",
      "yarn lint:staged",
      "git add"
    ],
    "*.{css,md,scss}": [
      "yarn format:staged",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 130,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
